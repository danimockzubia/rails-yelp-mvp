  <body>
    <div class='container'>
      <form>
        <div class='card'>
        <div class="form-group">
          <%= simple_form_for :restaurant do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>
            <%= f.label :address %>
            <%= f.text_field :address %>
            <%= f.label :phone_number %>
            <%= f.text_field :phone_number %>
            <%= f.label :category %><br>
            <%= f.select :category, %w(chinese italian japanese french belgian) %>
            <br>
            <%= f.submit %>
          <% end %>
        </div>
        </div>
      </form>
    </div>
  </body>
